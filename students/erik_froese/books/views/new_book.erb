<form action="/books/create" method="post">
  <p>
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" required>
  </p>

  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" required>
  </p>
  <p>
    <% @authors.each do |author| %>
       <label id="author_checkboxes" for="<%= author.id %>"><%= author.first_name %> <%= author.last_name %>: </label>
       <input type="checkbox" name="<%= author.id %>" id="<%= author.id %>">
    <% end %>
  </p>
  <p>
    Can't find your author? <a href="/authors/new">Create one first.</a>
  </p>
  <button>Create book!</button>
</form>