<form action="/books/update" method="post">
  <input type="hidden" name="id" value="<%= @book.id %>">

  <p>
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" value="<%= @book.title %>" required>
  </p>

  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" value="<%= @book.photo %>" required>
  </p>

  <p>
    <% @authors.each do |author| %>
       <label for="<%= author.id %>"><%= author.first_name %> <%= author.last_name %>: </label>
       <input type="checkbox" name="<%= author.id %>" id="<%= author.id %>" <%= 'selected' if @author_ids.include? author.id %> >
       <% end %>
  </p>
  <button>Update book!</button>
</form>