<section class="post">
  <h2><%= @post.title %></h2>
  <p>
    <%= @post.copy %>
  </p>
  <img src="<%= @post.photo %>">
  <p class="mood">Mood: <%= @post.mood %></p>
  <aside class="controls">
    <a href="/posts/<%= @post.id %>/edit">Edit</a>
    |
    <a href="/posts/<%= @post.id %>/delete">Delete</a>
  </aside>
</section>