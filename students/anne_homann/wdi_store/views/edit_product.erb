<div class="edit_entry">
  <h1>Add a new product</h1>
</div>

<form action="/products/update" method="post">
  <input type="hidden" name="id" value="<%= @product['id'] %>">

  <p>
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" required value="<%= @product['title'] %>">
  </p>

  <p>
    <label for="price">Price: </label>
    <input type="text" name="price" id="price" required value="<%= @product['price'] %>">
  </p>

  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" required value="<%= @product['photo'] %>">
  </p>


  <div class="style"><button>Update Product</button></div>
</form>
