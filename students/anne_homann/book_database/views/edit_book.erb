<div class="edit_book">
  <h1>Update this book</h1>
</div>

<form action="/books/update" method="post">
  <input type="hidden" name="id" value="<%= @book.id %>">

  <p>
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" required value="<%= @book.title %>">
  </p>

  <p>
    <label for="price">Price: </label>
    <input type="text" name="price" id="price" required value="<%= @book.price %>">
  </p>

  <p>
    <label for="isbn">ISBN: </label>
    <input type="text" name="isbn" id="isbn" required value="<%= @book.isbn %>">
  </p>

  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" required value="<%= @book.photo %>">
  </p>

  <p>
    <% @authors.each do |author| %>
    <label for="<%= author.first_name %>"><%= author.first_name %> <%= author.last_name %></label>
    <input type="checkbox" id="<%= author.first_name %>" name="<%= author.first_name %>" value="<%= author.id %>">
    <% end %>
  </p>
  <button>Update Book</button>
</form>