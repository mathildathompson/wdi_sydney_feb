<form action="/books/update" method="post">
  <input type="hidden" name="id" value="<%= @book.id %>">

  <p id="newbook_margin">
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" required value="<%= @book.title %>">
  </p>

  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" required value="<%= @book.photo %>">
  </p>

  <p>
    <label for="isbn">ISBN: </label>
    <input type="text" name="isbn" id="isbn" required value="<%= @book.isbn %>">
  </p>

  <p>
    <button><a href="/authors/new">Add new Author</a></button>
  </p>
  
  <p>
    <label for="author_id">Author: </label>
    <% @authors.each do |author| %>
      <input class="checkbox" type="checkbox" name="<%= author.name %>" value="<%= author.id %>" <%= "checked" if @book.authors.include? author %>><%= author.name %></input>
    <% end %>
  </p>

  <button>Update book!</button>
</form>

<hr>
