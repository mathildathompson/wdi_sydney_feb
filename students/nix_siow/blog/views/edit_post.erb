<form action="/blog/update" method="post">
  <input type="hidden" name="id" value="<%= @post.id %>">

  <p>
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" required value="<%= @post.title %>">
  </p>

  <p>
    <label for="content">Content: </label>
    <input type="text" name="content" id="content" required value="<%= @post.content %>">
  </p>

  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" required value="<%= @post.photo %>">
  </p>

  <p>
    <label for="mood">Mood: </label>
    <select name="mood" id="mood" required>
      <option value="Happy" selected>Happy</option> 
      <option value="Sad">Sad</option>
      <option value="Exited">Exited</option>
      <option value="Tired">Tired</option>
      <option value="Great">Great</option>
      <option value="Wonderful">Wonderful</option>
      <option value="Annoyed">Annoyed</option>
      <option value="Blessed">Blessed</option>
      <option value="Meh">Meh</option>
      <option value="Loved">Loved</option>
      <option value="Angry">Angry</option>
      <option value="Sick">Sick</option>
      <option value="Bored">Bored</option>
      <option value="Lonely">Lonely</option>
      <option value="Depressed">Depressed</option>
    </select>
  </p>

  <button>Update Post!</button>
</form>

<hr>
<div class="navigate">
  <details close="">
    <summary>
      <img id="nav_img" src="/images/logo.png">
    </summary>
    <nav>
      <ul>
        <a href="/">Home</a>
        <a href="/blog/new">Post Something New</a>
        <a href="/blog">Latest Post</a>
      </ul>
    </nav>
    </details>
</div>