<!DOCTYPE html>
<html>
<head>
  <title>Templating Jazz</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= yield %>


<script id="flag" type="text/x-handlebars-template">
  {{#each flags}}
  <div>
      <p>
        <span class="flag {{ this.abbreviation }}"></span> {{ this.name }} {{ this.abbreviation }}
      </p>
    </div>
  {{/each}}
</script>

</body>
</html>
