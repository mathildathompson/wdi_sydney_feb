<section class="product">
  <h2><%= @product['name'].capitalize %></h2>
  <p>Product type: <%= @product['type'].capitalize %></p>
  <p>Price: $<%= @product['price'] %></p>
  <img src="<%= @product['photo'] %>">
  <aside class="controls">
    <a href="/store/<%= @product['id'] %>/edit">Edit</a>
    |
    <a href="/store/<%= @product['id'] %>/delete">Delete</a>
  </aside>
</section>