<form action="/store/create" method="post">
  <p>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" placeholder="  symbol sensitive :/'%$*@...   " autofocus required>
  </p>

  <p>
    <label for="type">Type: </label>
    <input type="text" name="type" id="type" placeholder="  symbol sensitive :/'%$*@...   " required>
  </p>

  <p>
    <label for="photo">Product Image: </label>
    <input type="url" name="photo" id="photo" placeholder="  eg: http://xxxxx.xxx/x/xx" required>
  </p>

  <p>
    <label for="price">Price($): </label>
    <input type="text" name="price" id="price" placeholder="  symbol sensitive :/'%$*@...   " required>
  </p>

  <p>
    <label for="box">On Sale: </label>
    <input type="checkbox" name="box" id="price" required>
  </p>

  <button>Upload Product!</button>
</form>