<form action="/post/create" method="post">

  <p>
    <label for="title">Title : </label>
    <input type="text" name="title" id="title" required>
  </p>

  <p>
    <label for="copy">Copy : </label>
    <input type="textarea" name="copy" id="copy" required>
  </p>

  <p>
    <label for="mood">Mood : </label>
    <input type="text" name="mood" id="mood" required>
  </p>

  <p>
    <label for="current_plaything">Current Plaything: </label>
    <input type="text" name="current_plaything" id="current_plaything" required>
  </p>  

  <p>
    <label for="author">Author : </label>
    <input type="text" name="author" id="author" required>
  </p>

  <p>
    <label for="image">Image (URL) : </label>
    <input type="url" name="image" id="image" required>
  </p>

  <button>Create Post</button>
</form>