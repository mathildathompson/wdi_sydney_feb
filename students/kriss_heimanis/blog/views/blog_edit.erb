<form action="/post/update" method="post">
  
  <input type="hidden" name="id" value="<%= @blog.id %>">

  <p>
    <label for="title">Title : </label>
    <input type="text" name="title" id="title" required value="<%= @blog.title %>">
  </p>

  <p>
    <label for="copy">Copy : </label>
    <input type="textarea" name="copy" id="copy" required value="<%= @blog.copy %>">
  </p>

  <p>
    <label for="mood">Mood : </label>
    <input type="text" name="mood" id="mood" required value="<%= @blog.mood %>">
  </p>

  <p>
    <label for="current_plaything">Current Plaything: </label>
    <input type="text" name="current_plaything" id="current_plaything" required value="<%= @blog.current_plaything %>">
  </p>  

  <p>
    <label for="author">Author : </label>
    <input type="text" name="author" id="author" required value="<%= @blog.author %>">
  </p>

  <p>
    <label for="image">Image (URL) : </label>
    <input type="url" name="image" id="image" required value="<%= @blog.image %>">
  </p>

  <button>Update Post</button>
</form>