<style>
  html {
        background-image: url('/images/blog-home-bnw.jpg');
        background-repeat: no-repeat;
      }
</style>  

<div class="new">
<form action="/post_list/create" method="post">
  <p>
    <label for="title">Title : </label>
    <input type="text" name="title" id="title" placeholder="add a title for your post" required>
  </p>

  <p>
    <label for="copy">Copy : </label>
    <input type="text" name="copy" class="copy"  placeholder="what do you want to write? "required>
  </p>

  <p>
    <label for="mood_select">Mood : (Select your mood today) </label>
    <select id="mood" name="mood" class="mood" required/>
      <option>Awake</option>
      <option>Alone</option>
      <option>Blah</option>
      <option>Blissful</option>
      <option>Bored</option>
      <option>Devious</option>
      <option>Excited</option>
      <option>Exhausted</option>
      <option>Geeky</option>
      <option>Lazy</option>
      <option>Sleepy</option>
      <option>Refreshed</option>
    </select>
  </p>

  <p>
    <label for="currently_playing">I'm currently listening to : </label>
    <input type="text" name="currently_playing" id="currently_playing" placeholder="what are you currently listening to? ">
  </p>

  <p>
    <label for="currently_reading">I'm currently reading : </label>
    <input type="text" name="currently_reading" id="currently_reading" placeholder="what are you currently reading? " required>
  </p>

  <input type="submit" value="Create my Post!" class="button">
</form>
</div>