<h2>Here is your book</h2>
<p><%= @book.title %></p>
<p><img class="pic" src="<%= @book.cover %>"></p>
<p><a href="/books/<%= @book.id %>/edit"><i class="fa fa-edit"></i>Edit</a>
 | <a href="/books/<%= @book.id %>/delete"><i class="fa fa-trash-o"></i>Delete</a></p>
<h3>Here are the authors</h3>
<ul>
  <% @authors.each do |author| %>
    <li><a href="/authors/<%= author.id %>"><%= author.name %></a></li>
  <% end %>
</ul>