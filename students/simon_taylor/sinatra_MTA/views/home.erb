<h1>Sinatra MTA Lab</h1>

<form action="/results" method="get">
  <p>
    <label for="from_stop">From Stop:</label>
    <select name="from_stop" id="from_stop">
      <% @line_stop.each do |stop| %>
        <option value="<%= stop %>"><%= stop %></option> 
      <% end %>
    </select>
  </p>
  <p>
    <label for="to_stop">To Stop:</label>
    <select name="to_stop" id="to_stop">
      <% @line_stop.each do |stop| %>
        <option value="<%= stop %>"><%= stop %></option> 
      <% end %>
    </select>
  </p>
  <button>Submit Trip!</button>
</form>
