<%= form_for @ocean do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Ocean Name:' %>
    <%= f.text_field :name, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :area, 'Area (sq. km):' %>
    <%= f.number_field :area, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :avg_depth, 'Average Depth (m):' %>
    <%= f.number_field :avg_depth, :required => true %>
  </div>
    <div class="form-group">
    <%= f.label :greatest_depth, 'Greatest Depth (m)' %>
    <%= f.number_field :greatest_depth, :required => true %>
  </div>
    <div class="form-group">
    <%= f.label :where_deepest, 'Where is it Deepest?' %>
    <%= f.text_field :where_deepest, :required => true %>
  </div>
  <%= f.submit %>
<% end %>