<h2>Welcome to Rock Paper Scissors!</h2>

<form action="/games/rock_paper_scissors" method="get">
  <label for="choice">Choose Rock, Paper or Scissors:</label>
  <input id="choice" name="choice" type="text" placeholder="Rock, Paper or Scissors" required>
  <button>Battle!</button>
</form>

<% if params[:choice] != nil %>
  <p><b>Your Choice:</b> <%= params[:choice].capitalize %></p>
  <p><b>Web Server's Response:</b> <%= @response %></p>
<% end %>