<% @artists.each do |artist| %>
  <ul>
    <li><%= image_tag artist.image, :width => '500px' %></li>
    <li><%= link_to artist.name, artist_path(artist.id) %></li>
    <li><%= artist.period %></li>
    <li><%= artist.nationality %></li>
    <li><%= artist.dob.strftime('%-d %B %Y') %></li>
  </ul>
<% end %>

