<section class="book">
  <h2><%= @book.title %></h2>
  <p>Genre: <%= @book.genre %></p>
        <% @book.authors.each do |author| %>
        <li>
            <a href="/authors/<%= author.id %>">
                <p>Author: <%= author.name %></p>
            </a>
        </li>
        <% end %>
      <img src="<%= @book.photo %>">
        

    <aside class="controls">
        <a href="/books/<%= @book.id %>/edit">Edit</a>
        |
        <a href="/books/<%= @book.id %>/delete">Delete</a>
    </aside>
</section>