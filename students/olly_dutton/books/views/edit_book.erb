 <form action="/books/update" method="post">
  <input type="hidden" name="id" value="<%= @book.id %>">

  <p>
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" required value="<%= @book.title %>">
  </p>

   <p>
    <label for="genre">Genre: </label>
    <input type="text" name="genre" id="genre" required value="<%= @book.genre %>">
  </p>

  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" required value="<%= @book.photo %>">
  </p>

  <p>Authors:
      <% @authors.each do |author| %> <br>
        <label for="author_id"><%= author.name %> </label>
        <input name="<%= author.name %>" id="author_id" type="checkbox" value="<%= author.id %>">
      <% end %>
  </p>  

  <button>Update Book</button>
</form>


<%#= "selected" if author.id == @book.author_id %>

