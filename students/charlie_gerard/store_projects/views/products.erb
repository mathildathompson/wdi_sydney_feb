<div id="container">

	<h2>Index of products</h2>

	<div id="products">
		<% @products.each do |product| %>
			<a href="/products/<%= product['id'] %>"> <%= product['name']%></a>
			<p>$<%= product['price']%> </p>
			<a href="/products/<%= product['id'] %>"> <img src="<%=product['photo']%>"> </a>
	</div>
<%end%>
</div>