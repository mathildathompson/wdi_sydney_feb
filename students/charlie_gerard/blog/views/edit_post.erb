<form action="/posts/update" method="post">
	<input type="hidden" name="id" value="<%= @post.id %>">

  <p>
    <label for="Title">Title: </label>
    <input type="text" name="title" id="title" required value="<%= @post.title %>">
  </p>

  <p>
    <label for="copy">Copy: </label>
    <input type="text" name="copy" id="copy" required value="<%= @post.copy %>">
  </p>

  <p>
    <label for="author">Author: </label>
    <input type="text" name="author" id="author" required value="<%= @post.author %>">
  </p>

  <p>
    <label for="image">Image: </label>
    <input type="url" name="image" id="image" required value="<%= @post.image %>">
  </p>

  <button>Update post!</button>
</form>







